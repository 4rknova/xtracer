# The scene materials
material = {

	# The following three colors are RGB approximations to the spectral
	# measurements of the white, col1, and col2 paints used in the Cornell Box.
	white = {
		type = lambert

		diffuse = {
			r = 0.5
			g = 0.5
			b = 0.5
		}
	}

	mirror = {
		type = blinn_phong

		k_diffuse  = 0.0
		k_specular = 1
		k_exponent = 16000000

		diffuse = {
			r = 1
			g = 1
			b = 1
		}

		specular = {
			r = 1
			g = 1
			b = 1
		}

		reflectance = 1
	}

	col1 = {
		type = lambert

		diffuse = {
			r = 0.33
			g = 0.46
			b = 1.00
		}
	}

	col2 = {
		type = lambert

		diffuse = {
			r = 0.74
			g = 0.94
			b = 0.09
		}
	}

	light = {
		type = lambert

		diffuse = {
			r = 1.0
			g = 1.0
			b = 1.0
		}
	}

	glossy = {
		type = blinn_phong

		k_diffuse  = 0.0
		k_specular = 1
		k_exponent = 160

		diffuse = {
			r = 1
			g = 1
			b = 1
		}

		specular = {
			r = 1
			g = 1
			b = 1
		}

		reflectance = 1
	}

    light_source = {
        type = emissive

        emissive = {
            r = 1
            g = 1
            b = 1
        }
    }
}

