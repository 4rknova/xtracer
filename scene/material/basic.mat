# ================================== #
#	LAMBERT MATERIALS				 #
# ================================== #

# plain red lambert 
lambert_red = {
	type = lambert
	diffuse = {
		r = 1
		g = 0
		b = 0
	}
}

# plain green lambert
lambert_green = {
	type = lambert
	diffuse = {
		r = 0
		g = 1
		b = 0
	}
}

# plain blue lambert
