	type = lambert
	diffuse = {
		r = 0
		g = 0
		b = 1
	}
}
	
# plain silver lambert
lambert_silver = {
	type = lambert
	diffuse = {
		r = 0.5
		g = 0.5
		b = 0.5
	}
}

