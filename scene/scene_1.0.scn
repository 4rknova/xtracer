geometry = {
	sphere = {
		type = sphere
		position = {
			y = 175
			z = 300
		}
		radius = 175
	}

	plane = {
		type = plane
		normal = {
			y = 1
		}
		distance = 0
		u_scale = 0.003
		v_scale = 0.003
	}
}

light = {
	sat = {
		type = sphere

		radius = 50

		position = {
			x = 200
			y = 300
			z = 100
		}

		intensity = {
			r = 1
			g = 1
			b = 1
		}
	}

	cat = {
		type = sphere

		radius = 20

		position = {
			x = -200
			y = 400
			z = -400
		}

		intensity = {
			r = 0.51
			g = 0.51
			b = 0.51
		}
	}
}

material = {
	floor = {
		type = blinn_phong

		k_diffuse = 0.8
		k_specular = 0.2
		k_exponent = 1350

		diffuse = {
			r = 0.251
			g = 0.251
			b = 0.251
		}

		specular = {
			r = 1
			g = 1
			b = 1
		}

		reflectance = 0.3
	}

	plastic = {
		type = phong

		k_diffuse = 0.5
		k_specular = 0.5
		k_exponent = 60

		diffuse = {
			r = 1
			g = 1
			b = 1
		}

		specular = {
			r = 1
			g = 1
			b = 1
		}

		reflectance = 0.053
	}
}

texture = {
	checker = {
		source = <texdir>/chbd01.ppm
	}

	wood = {
		source = <texdir>/wood01.ppm
	}
}

object = {
	sphere = {
		geometry = sphere
		material = plastic
		texture = wood
	}
	plane = {
		geometry = plane
		material = floor
		texture = checker
	}
}
