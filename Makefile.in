# paths
# - target
spath = src
opath = $(bpath)/obj
tpath = doc

# - sources
ccsrc = $(wildcard $(spath)/*.c) $(wildcard $(spath)/drv/*.c)
ccsrcc = $(wildcard $(spath)/*.cc) $(wildcard $(spath)/drv/*.cc)
ccsrcpp = $(wildcard $(spath)/*.cpp) $(wildcard $(spath)/drv/*.cpp)
doctex = $(wildcard $(tpath)/*.tex)

# binarys
objc = $(ccsrc:.c=.o)
objcc = $(ccsrcc:.cc=.o)
objcpp = $(ccsrcpp:.cpp=.o)

bin = $(bpath)/$(pkgname)
doc = $(bpath)/$(pkgname).pdf

PDFVIEWER = xpdf 
TEX = xelatex
RM = rm
CC = gcc
CXX = g++
CCFLAGS = -std=c89 -Wall -Wno-strict-aliasing $(opt) $(dbg) -I$(spath)  -I/usr/local/include/
CXXFLAGS = -ansi -pedantic -Wall -Wno-strict-aliasing $(opt) $(dbg) -I$(spath) -I/usr/local/include/
LDFLAGS = -lpthread -lnparse -lnmath `sdl-config --libs`

$(doc): $(doctex)
	$(TEX) $(doctex) 

$(bin): $(objc) $(objcc) $(objcpp)
	$(CXX) $(CXXFLAGS) $(objc) $(objcc) $(objcpp) -o $@ $(LDFLAGS)

%.o: %.c
	$(CC) -c $(CCFLAGS) -o $@ $<

%.o: %.cc
	$(CXX) -c $(CXXFLAGS) -o $@ $<

%.o: %.cpp
	$(CXX) -c $(CXXFLAGS) -o $@ $<

.PHONY: all
all: $(bin) $(doc)

.PHONY: doc
doc: $(doc)

.PHONY: bin 
bin: $(bin)

.PHONY: clean
clean:
	$(RM) -rf $(objc) $(objcc) $(objcpp)
	$(RM) -rf $(basename $(doc)).{aux,log,out,toc}

.PHONY: clean-all
clean-all: clean
	rm -f Makefile $(bin)
