# paths
# - target
spath = src
opath = $(bpath)/obj
tpath = doc
mpath = man

# - sources
ccsrc = $(wildcard $(spath)/*.c)
ccsrcc = $(wildcard $(spath)/*.cc)
ccsrcpp = $(wildcard $(spath)/*.cpp)
doctex = $(wildcard $(tpath)/*.tex)

# binarys
objc = $(ccsrc:.c=.o)
objcc = $(ccsrcc:.cc=.o)
objcpp = $(ccsrcpp:.cpp=.o)

bin = $(bpath)/$(pkgname)
doc = $(bpath)/$(pkgname).pdf
man = $(mpath)/$(pkgname).1

TEX = xelatex
RM = rm
CC = gcc
CXX = g++
COFLAGS= $(opt) $(dbg) -D'$(sdl)' -D'XT_VERSION="$(shell cat VERSION)"' -I/usr/local/include -Wall
CCFLAGS = -std=c89 -Wno-strict-aliasing -I$(spath) $(COFLAGS)
CXXFLAGS = -ansi -pedantic -Wno-strict-aliasing -I$(spath) $(COFLAGS)
TEXFLAGS = -output-directory=$(tpath)
LDFLAGS = -lnparse -lnmath $(LDSDL)

$(bin): $(objc) $(objcc) $(objcpp)
	$(CXX) $(CXXFLAGS) $(objc) $(objcc) $(objcpp) -o $@ $(LDFLAGS)

$(doc): $(doctex)
	$(TEX) $(TEXFLAGS) $(doctex)
	
%.o: %.c
	$(CC) -c $(CCFLAGS) -o $@ $<

%.o: %.cc
	$(CXX) -c $(CXXFLAGS) -o $@ $<

%.o: %.cpp
	$(CXX) -c $(CXXFLAGS) -o $@ $<

.PHONY: all
all: $(bin)

.PHONY: bin 
bin: $(bin)

.PHONY: doc
doc: $(doc)

.PHONY: man-preview
man-preview:
	clear&&nroff -Tascii -man "man/xtracer.1" | col -x | less -c

.PHONY: install
install: all
	install -m 775 $(bin) $(PREFIX)/bin/$(pkgname)
	install -c -m 444 $(man) $(PREFIX)/share/man/man1/$(pkgname).1
		  
.PHONY: uninstall
uninstall:
	rm -f $(PREFIX)/bin/$(pkgname)
	rm -f $(PREFIX)/share/man/man1/$(pkgname).1


.PHONY: clean
clean:
	$(RM) -rf $(objc) $(objcc) $(objcpp)
	$(RM) -rf $(tpath)/*.aux $(tpath)/*.log $(tpath)/*.out $(tpath)/*.toc

.PHONY: clean-all
clean-all: clean
	rm -f Makefile $(bin)
	rm -f $(tpath)/*.pdf
