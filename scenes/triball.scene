# Xtracer example scene
name = sample scene
description = This <name> is used to describe the specification.

# The background color
bgcolor = {
	r = 0
	g = 0
	b = 0
}

# group camera contains all the cameras
camera = {
	# The default camera to use
	default = cam1

	cam1 = {
		# Field of view
		fov = 45

		# Camera's position
		position = {
			x = 0 
			y = 0
			z = 0
		}
		# Camera's focus direction
		target = {
			x = 0
			y = 0
			z = 1
		}

		up = {
			x = 0
			y = 1
			z = 0
		}

	}
}

# group object contains all the geometry
geometry = {
	# object node
	s1 = {
		# The object's geometry 
		type = sphere

		# The sphere's position
		position ={
			x = -93
			y = 83
			z = 900
		}

		# The sphere's radius
		radius = 150

		# The geometry's material
		material = mat3
	}

	s2 = {
		type = sphere

		position = {
			x = 93
			y = 83
			z = 1000
		}

		radius = 150

		material = mat2
	}

	s3 = {
		type = sphere
		position = {
			x = 0 
			y = -83
			z = 800
		}

		radius = 150

		material = mat1
	}
}

# group light contains all the lights
light = {
	light1 = {
		position = {
			x = 120
			y = -220
			z = 510 
		}

		intensity = {
			r = 255
			g = 0
			b = 0
		}
	}
}

# group material contains all the materials
material = {
	mat1 = {
		type = lambert
		
		diffuse = {
			r = 255
			g = 40
			b = 10
		}

		reflectance = 0.5;
	}

	mat2 = {
		type = lambert
		
		diffuse = {
			r = 70
			g = 255
			b = 50
		}

		reflectance = 0.5;
	}

	mat3 = {
		type = lambert
		
		diffuse = {
			r = 30
			g = 40
			b = 255
		}

		reflectance = 0.5;
	}
}
