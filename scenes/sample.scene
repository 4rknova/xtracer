# Xtracer example scene
name = Sample scene
description = This is a sample scene. It is used to describe the specification.
	
# group camera contains all the cameras
camera = {
	# The default camera to use
	default = cam1

	cam1 = {
		# Field of view
		fov = 45
		# Camera's position
		position = {
			x = 0
			y = 0
			z = 0
		}
		# Camera's focus direction
		target = {
			x = 0
			y = 0
			z = 1
		}

		up = {
			x = 0
			y = 1
			z = 0
		}

	}
}

# group object contains all the geometry
object = {
	ball = {
		# The object's geometry 
		geometry = sphere

		# The sphere's position
		position ={
			x = 0
			y = 0
			z = 10
		}

		# The sphere's radius
		radius = 1
	}
}

# group light contains all the lights
light = {
	lamp = {
		position = {
			x = 0
			y = 0
			z = 0
		}
	}
}
