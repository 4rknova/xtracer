phong_red = {
	type = phong

	reflectance = 0.5

	diffuse = {
		r = 1
		g = 0
		b = 0
	}
	specular = {
		r = 1
		g = 1
		b = 1
	}

	k_diffuse = 0.6
	k_specular = 0.4
	k_specexp = 10
}

