# Xtracer example scene
name = sample scene
description = This <name> is used to describe the specification.

# The background color
bgcolor = {
	r = .1
	g = .1
	b = .1
}

# group camera contains all the cameras
camera = {
	# The default camera to use
	default = cam1

	cam1 = {
		# Field of view
		fov = 45

		# Camera's position
		position = {
			x = 0 
			y = 0
			z = 0
		}
		# Camera's focus direction
		target = {
			x = 0
			y = 0
			z = 51 
		}

		up = {
			x = 0
			y = -1
			z = 0
		}

	}
}

# group object contains all the geometry
geometry = {
	# object node
	ball = {
		# The object's geometry 
		type = sphere

		# The sphere's position
		position ={
			x = 0
			y = 0
			z = 50
		}

		# The sphere's radius
		radius = 5

		# The geometry's material
		material = mat1
	}
}

# group light contains all the lights
light = {
	sat = {
		position = {
			x = -100
			y = 0
			z = 100
		}

		intensity = {
			r = 1
			g = 1
			b = 1
		}
	}
}

# group material contains all the materials
material = {
	mat1 = {
		type = lambert
		
		diffuse = {
			r = 0.6
			g = 0.3
			b = 0.55
		}

		reflectance = 0.5;
	}
}
